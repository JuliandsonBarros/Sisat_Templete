<div class="page-inner" style="width:100%">
    <div class="page-title">
        <h3 class="breadcrumb-header">
            Descreva sua duvida
            <i class="fa-solid fa-plus" id="addProjectIcon"></i>
        </h3>
        <div id="projectForm" class="mt-3" style="display:none;">
            <form asp-controller="Forum" asp-action="EnviarMensagem" method="post">

                <input hidden @* asp-for="Forum.IdAutor" *@ value="IdUsuario" />
                <input hidden type="datetime" @* asp-for="Forum.DataPostagem" *@ />

                <div class="form-group">
                    <label>Titulo: </label>
                    <input type="text" name="titulo" class="form-control" />
                </div>
                <label>Descreva seu Comentário: </label>
                <div class="form-group">
                    <label class="control-label"></label>
                    <textarea type="text" name="textoMensagem" class="form-control" rows="3"></textarea>
                </div>

                <div class="modal-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mt-2">Salvar</button>
                        <button type="button" class="btn btn-secondary mt-2" id="closeFormButton">Fechar</button>
                    </div>
                    
            </form>
        </div>
    </div>
    <!-- start page main wrapper -->
    <!-- end page main wrapper -->
    <div class="page-footer">
        <p>Copyright &copy; <span class="current-year"></span> MPM/DF.</p>
    </div>
</div>


<script>
    document.getElementById("addProjectIcon").addEventListener("click", function () {
        document.getElementById("projectForm").style.display = "block";
    });

    document.getElementById("closeFormButton").addEventListener("click", function () {
        document.getElementById("projectForm").style.display = "none";
    });
</script>
